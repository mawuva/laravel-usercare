{
    "name": "mawuekom/laravel-usercare",
    "description": "A Users Management Package that includes many features arround user",
    "keywords": [
        "mawuekom",
        "laravel-usercare"
    ],
    "homepage": "https://github.com/mawuva/laravel-usercare",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ephra√Øm Seddor",
            "email": "seddorephraim7@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "doctrine/dbal": "^3.1",
        "illuminate/support": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/http": "^8.0",
        "mawuekom/laravel-model-uuid": "^2.0",
        "mawuekom/laravel-repository-layer": "^1.1",
        "mawuekom/laravel-request-customizer": "^1.1",
        "mawuekom/laravel-password-history": "^1.3"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mawuekom\\Usercare\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mawuekom\\Usercare\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mawuekom\\Usercare\\UsercareServiceProvider"
            ],
            "aliases": {
                "Usercare": "Mawuekom\\Usercare\\UsercareFacade"
            }
        }
    }
}
